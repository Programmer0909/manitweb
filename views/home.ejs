<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <title>Home</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
        crossorigin="anonymous">
    <style>
        body {
            background-image: url('https://images.pexels.com/photos/414144/pexels-photo-414144.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1');
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
        }

        .btn {
            margin-top: 10px;
        }

        .table-container {
            background-color: transparent;
            border: 2px solid rgba(255, 255, 255, 0.5);
            border-radius: 20px;
            backdrop-filter: blur(15px);
            width: 60%;
            margin-top: 20px;
            margin-left: auto;
            margin-right: auto;
            overflow: hidden;
            padding: 20px;
        }

        .table-container form {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin-top: 20px;
            min-width: 200px;
        }

        .tablee {
            width: 100%;
            height: 650px;
        }

        h4 {
            margin-bottom: 10px;
            color: white;
        }

        
    </style>

</head>

<body>

    <nav class="navbar navbar-expand-lg bg-dark">


        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link text-light" href="#">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link text-light" href="/images/getimage">Image <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link text-light" href="/excel/getdata">Excel <span class="sr-only">(current)</span></a>
                </li>
            </ul>
            <form class="form-inline my-2 my-lg-0" action="/user/logout" method="get">
                <button class="btn btn-outline-danger my-2 my-sm-0" type="submit">Logout</button>
            </form>
        </div>
    </nav>
    <center>
        <table class="tablee" >
            <tr class="textii">
                <td>
                    <div class="table-container">
                        <center>
                            <h4>
                                Excel Play
                            </h4>
                        </center>
                        <form action="/excel/import-excel" enctype="multipart/form-data" method="post">
                            <input type="file" name="import-excel"
                                accept="application/vnd.openxmlformats-officedocument.spreadsheetml.sheet, application/vnd.ms-excel" />
                            <button type="submit" class="btn btn-dark"> Save excel file </button>
                        </form>
                    </div>
                </td>
                <td>
                    <div class="table-container">
                        <center>
                            <h4>
                                Image Play
                            </h4>
                        </center>
                        <form action="/images/post-image" enctype="multipart/form-data" method="post" >
                            <input type="file" name="image" multiple/>
                            <button type="submit" class="btn btn-dark"> Save image </button>
                        </form>
                    </div>
                </td>
            </tr>
        </table>
    </center>
    <script>
        const fileInputs = document.querySelectorAll('input[type="file"]');
        fileInputs.forEach(input => {
            input.addEventListener('change', (event) => {
                const label = event.target.nextElementSibling;
                if (event.target.files.length > 0) {
                    label.textContent = event.target.files[0].name;
                } else {
                    label.textContent = 'Save ' + label.textContent.toLowerCase();
                }
            });
        });
    </script>
</body>

</html>
